<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="com.example.jacek.stacjapogodowa.MainFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B/D"
        android:textSize="70sp"
        android:id="@+id/temperatura_txt"
        android:textColor="@color/h1"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/stopnie_celcjusza" />

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/pogoda_img"
        android:src="@drawable/slonce"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginRight="20dp"
        android:id="@+id/stopnie_celcjusza"
        android:src="@drawable/temperatura"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/temperatura_txt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ostatnia aktualizacja"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView2"
        android:layout_below="@+id/temperatura_txt"
        android:layout_alignStart="@+id/temperatura_txt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="B/D"
        android:textColor="@color/h1"
        android:textSize="15dp"
        android:id="@+id/data_txt"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <include layout="@layout/scroll"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" /> />
</RelativeLayout>
